    <script>
      function applicationQuestions() {
        let name = prompt("What is your name?");
        let age = prompt("How old are you?");
        let country = prompt("Are you resident in the UK?");
        country = country.toLowerCase();
        country = country.trim();
        let email = prompt("What is your email address?");
        if (age >= 18 && country === "yes") {
          alert(
            "Hi " +
              name +
              "! Thank you for your application, we will be in touch shortly! üê©"
          );
        } else {
          if (age < 18 || country === "no") {
            alert(
              "Sorry, " + name + "! You are not eligible to adopt a dog. üò•"
            );
          }
        }
      }
      let applyButton = document.querySelector("button");
      applyButton.addEventListener("click", applicationQuestions);
    </script>
